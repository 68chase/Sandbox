extends ./paneleditor

block vars
	- var settings = { name: 'primitiveEditor', controller: 'PrimitiveController', title: 'Properties', icon: 'properties', requiresSelection: true };

block content
	#primitive-accordion(vws-accordion='fields.selectedNode', ng-class="fields.selectedNode?'':'editorPanelDisable'")
		h3 
			a(href="#") Flags
		#otherprops.accordian-flags		
			input#dispName(type="text", ng-model="DisplayName" ng-model-options="{updateOn: 'blur'}")
			label Name
			input#dispOwner(type="text", disabled="disabled", ng-model="owner") 
			label Owners
			
			div(ng-repeat="flag in ::flags")
				input(type="checkbox" name="{{flag}}")
				label(for="{{flag}}") {{flag}}

		h3
			a(href="#") Transforms
		.accordian-transforms
			.EditorLabel Translation
			#Translation
				input.TransformEditorInput#PositionX
				input.TransformEditorInput#PositionY
				input.TransformEditorInput#PositionZ
			.EditorLabel Rotation
			#Rotation
				input.TransformEditorInput#RotationX
				input.TransformEditorInput#RotationY
				input.TransformEditorInput#RotationZ
			.EditorLabel Scale
			#Scale
				input.TransformEditorInput#ScaleX(min=".0001", step=".05")
				input.TransformEditorInput#ScaleY(min=".0001", step=".05")
				input.TransformEditorInput#ScaleZ(min=".0001", step=".05")
		h3(ng-repeat-start="data in allEditorData") 
			a(href="#") {{data.type}}: {{data.name}}
		.accordion-properties(ng-repeat-end)
			div(ng-repeat="(key, value) in data.editorProps")
				vwf-editor-property(vwf-prop="value", vwf-key="{{key}}", vwf-node="node")
	
	#vwf-template-slider(ng-non-bindable, style='display: none;') 
		.editorSliderLabel {{displayname}}
		slider(min="min", max="max", step="step || 1", value='vwfNode.properties[vwfKey]', sliding='suppressUndo')
	
	#vwf-template-color(ng-non-bindable, style='display: none;')
		.editorSliderLabel {{displayname}}
		color-picker(color-arr='vwfNode.properties[vwfKey]', color-obj='{r:0,g:0,b:0}', sliding='suppressUndo')
		
	#vwf-template-check(ng-non-bindable, style='display: none;')
		| checkbox
		
	#vwf-template-button(ng-non-bindable, style='display: none;')
		| button
		
	#vwf-template-rangeslider(ng-non-bindable, style='display: none;')
		| rangeslider?		
		
	#vwf-template-choice(ng-non-bindable, style='display: none;')
		| choice?	
			
			
			
			
			
			
			
			
