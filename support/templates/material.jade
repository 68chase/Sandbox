extends ./paneleditor

block vars
	- var settings = { name: 'materialEditor', controller: 'MaterialController', title: 'Material', icon: 'material' };

block content

	#materialaccordion(vws-accordion='materialDef')

		h3: a(href="#") Material Base
		#MaterialBasicSettings

			label.inline Material Type: 
				select#materialtype
					option phong
					option mix
					option video

			label Alpha:
				br
				slider(min=0, max=1, step=0.01, value='materialDef.alpha', disabled='!fields.selectedNode')
			label Specular level:
				br
				slider(min=0, max=10, step=0.1, value='materialDef.specularLevel', disabled='!fields.selectedNode')
			label Reflectiveness:
				br
				slider(min=0, max=10, step=0.1, value='materialDef.reflect', disabled='!fields.selectedNode')
			label Shininess:
				br
				slider(min=0, max=10, step=0.1, value='materialDef.shininess', disabled='!fields.selectedNode')

			label.inline Culling:
				select(ng-model='materialDef.side', ng-disabled='!fields.selectedNode', convert-to-number)
					option(value=0, label='Back') Back
					option(value=1, label='Front') Front
					option(value=2, label='None') None

			label.inline Diffuse color:
				color-picker(color-obj='materialDef.color', disabled='!fields.selectedNode')

			label.inline Ambient color:
				.verticalLayout(style='align-items: flex-end;')
					label Linked
						input(type='checkbox', ng-model='ambientLinked', style='margin-top: 0')
					color-picker(color-obj='materialDef.ambient', disabled='!fields.selectedNode', ng-hide='ambientLinked')

			label.inline Emissive color:
				color-picker(color-obj='materialDef.emit')

			label.inline Specular color:
				color-picker(color-obj='materialDef.specularColor')
